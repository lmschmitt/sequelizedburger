
<div class="container">

  <div class="col-md-6">
<h2>Undevoured Burgers!</h2>
    <ul class="list-group">
      {{#each burgers}}
        {{#unless devoured}}
          <li class="list-group-item">
            {{name}}

            <form action="/update/{{id}}" method="POST">
              <div class="form-group">
              <button type="submit" class="btn btn-default">Devour!</button>
              </div>
            </form>

          
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h2>Devoured Burgers!</h2>

    <ul class="list-group">
      {{#each burgers}}
        {{#if this.devoured}}
          <li class="list-group-item">
            {{this.name}}

            {{!-- <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devour" value="false" class="input-group">
              
            </form> --}}

          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="container">
  <div class="col-md-12">
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/insert" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name" class="input-group">
      </div>

      {{!-- <div class="form-group">
        <label for="dev">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Sleepy!<br>
        <input type="radio" name="devoured" value="0"> Awake
      </div> --}}

      <button type="submit" class="btn btn-default">Add Burger</button>
    </form>
  </div>
</div>